<AnchorPane prefHeight="550.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tastytreat.tastytreat.Client.CustomerLoginController">
   <children>
      <ImageView fx:id="LoginImage" fitHeight="550.0" fitWidth="900.0" pickOnBounds="true" preserveRatio="true" />
      <Label layoutX="487.0" layoutY="153.0" prefHeight="40.0" prefWidth="124.0" text="Username">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label layoutX="487.0" layoutY="233.0" prefHeight="40.0" prefWidth="124.0" text="Password">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="userText" layoutX="630.0" layoutY="153.0" prefHeight="40.0" prefWidth="211.0" promptText="Enter Username" />
      <PasswordField fx:id="passwordText" layoutX="630.0" layoutY="233.0" prefHeight="40.0" prefWidth="211.0" promptText="Enter password" />
      <ButtonBar layoutX="137.0" layoutY="193.0" prefHeight="40.0" prefWidth="200.0" />
